@startuml
class Usuario {
    +nome: string
    +email: string
    +telefone: string
    +senha: string
    +tipo_perfil: string
    +data_cadastro: datetime
}

class Salao {
    usuario: Usuario
}

class Cliente {
    usuario: Usuario
}

class Profissional {
    +nome: string
    +salao: Salao
}

class Servico {
    +nome: string
    +descricao: string
    +preco: decimal
    +duracao_minutos: int
}

class Agendamento {
    +cliente: Cliente
    +profissional: Profissional
    +servico: Servico
    +data_agendada: date
    +hora_inicio: time
    +hora_fim: time
    +status: string
    +data_criacao: datetime
    +data_cancelamento: datetime
}

