@startuml
class Usuario {
    +nome: string
    +email: string
    +telefone: string
    +senha: string
    +tipo_perfil: string
    +data_cadastro: datetime
}

class Salao {
    usuario: Usuario
}

class Cliente {
    usuario: Usuario
}

class Profissional {
    +nome: string
    +empresa: Empresa
}

class Servico {
    +nome: string
    +descricao: string
    +valor: decimal
    +duracao_minutos: int
}

class HorarioDisponivel {
    +id_horario: string
    +id_profissional: string
    +dia_semana: string
    +hora_inicio: time
    +hora_fim: time
    +ativo: boolean
}

class Agendamento {
    +cliente: Cliente
    +profissional: Profissional
    +servico: Servico
    +data_agendamento: date
    +hora_inicio: time
    +hora_fim: time
    +status: string
    +data_criacao: datetime
    +data_cancelamento: datetime
}

